                    <description>Manual Search</description>
                    <label>413</label>
                    <include>Dialog_Standard_Right_Buttons</include>
                </control>
                <!-- Providers -->
                <control type="list" id="150">
                    <description>Button Area</description>
                    <left>1130</left>
                    <top>0</top>
                    <height>350</height>
                    <width>300</width>
                    <onleft>120</onleft>
                    <onright>120</onright>
                    <onup>160</onup>
