                    <control type="image">
                        <left>130</left>
                        <top>22</top>
                        <width>100</width>
                        <height>24</height>
                        <aspectratio align="left">keep</aspectratio>
                        <texture>subs/icon_sync.png</texture>
                        <colordiffuse>dialog_fg_70</colordiffuse>
                        <visible>ListItem.property(sync)</visible>
                    </control>

                    <control type="label">
                        <left>227</left>
                        <right>30</right>
                        <height>66</height>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label,,  •  ]$INFO[ListItem.Label2]</label>
                        <textcolor>dialog_fg_70</textcolor>
                        <font>font_small</font>
                    </control>

                </itemlayout>

                <focusedlayout height="69" width="1300">
                    <control type="image">
                        <height>66</height>
                        <width>100%</width>
                        <texture border="5" colordiffuse="$VAR[ColorHighlight]">common/box.png</texture>
                    </control>
                    <control type="image">
                        <left>11</left>
                        <posy>12</posy>
                        <width>44</width>
                        <height>44</height>
                        <texture fallback="DefaultAddonNone.png">subs/$INFO[ListItem.Thumb].png</texture>
                    </control>
                    <control type="image">
                        <left>77</left>
